# Configurações da API
API_HOST=0.0.0.0
# PORT será definido automaticamente pelo Railway
API_PORT=8001
DEBUG=False

# Google Gemini API - OBRIGATÓRIO: Configure sua chave da API do Google
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# Backend InfraWatch - URL do backend em produção
INFRAWATCH_API_URL=https://infrawatch-backend-production.up.railway.app
INFRAWATCH_API_TOKEN=your_infrawatch_api_token
INFRAWATCH_AGENT_EMAIL=your_agent_email@example.com
INFRAWATCH_AGENT_PASSWORD=your_agent_password

# Vector Database
VECTOR_DB_PATH=./vector_db
CHROMA_DB_PATH=./chroma_db

# Database
DATABASE_URL=sqlite:///./ai_agent.db

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_TOKENS=4096
TEMPERATURE=0.7
TOP_P=0.9

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/ai_agent.log

# Cache
CACHE_TTL=300  # 5 minutes

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
